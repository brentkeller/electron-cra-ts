{
  "name": "cra-electron",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "build": {
    "appId": "com.example.myApplication",
    "productName": "My Application",
    "copyright": "Copyright Â© 2019 Natesh M Bhat",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable",
      "icon": "assets/app.ico"
    }
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "concurrently": "^4.1.1",
    "copyfiles": "^2.1.1",
    "cross-env": "^5.2.0",
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "electron-reload": "^1.4.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "typescript": "3.5.3",
    "wait-on": "^3.2.0",
    "watch": "^1.0.2"
  },
  "scripts": {
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "react:test": "react-scripts test --env=jsdom",
    "react:eject": "react-scripts eject",
    "react:prebuild": "copyfiles -u 2 src/electron/**/*.js public",
    "electron:build": "electron-builder",
    "electron:publish": "electron-builder --publish=always",
    "release": "run-s server:build react:prebuild react:build electron:publish",
    "build": "run-s server:build react:prebuild react:build electron:build",
    "client:start": "cross-env BROWSER=none npm run react:start",
    "server:build": "tsc ./src/electron/electron.ts",
    "server:start": "concurrently \"tsc ./src/electron/electron.ts -w\"  \"cross-env NODE_ENV=dev nodemon --exec \"\"wait-on http://localhost:3000 && electron src/electron/electron.js\"\"",
    "start": "run-p client:start server:start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
